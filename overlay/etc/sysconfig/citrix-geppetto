. /etc/openstack/geppetto-backend

BIND_ADDRESS=0.0.0.0
PORT=8080

OPTIONS="$BIND_ADDRESS $PORT"

EXTRA_OPTS="--db_backend=$VPX_MASTER_DB_BACKEND \
            --db_name=$VPX_MASTER_DB_NAME \
            --db_host=$VPX_MASTER_DB_HOST \
            --db_user=$VPX_MASTER_DB_USER \
            --db_pass=$VPX_MASTER_DB_PASS \
            --queue_host=$VPX_MASTER_QUEUE_HOST \
            --queue_user=$VPX_MASTER_QUEUE_USER \
            --queue_pass=$VPX_MASTER_QUEUE_PASS \
"

